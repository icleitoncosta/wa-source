      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "outDir": "./dist",
      "removeComments": false,
      "skipLibCheck": true,
      "strict": true,
      "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["src/tools/**/*"]
  }
  